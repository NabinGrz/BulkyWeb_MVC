
@model ProductCategoryRequest;

<div class="container border border-2 shadow-sm rounded-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <form method="post">
            <input asp-for="Product.ID" hidden />
            <div class="mb-3">
                <label asp-for="Product.Title" class="form-label"></label>
                <input class="form-control" disabled id="Title" asp-for="Product.Title" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.Description" class="form-label"></label>
                <input class="form-control" disabled id="Description" asp-for="Product.Description" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.ISBN" class="form-label"></label>
                <input class="form-control" disabled id="ISBN" asp-for="Product.ISBN" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.Author" class="form-label"></label>
                <input class="form-control" disabled id="Author" asp-for="Product.Author" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.ListPrice" class="form-label"></label>
                <input class="form-control" disabled id="ListPrice" asp-for="Product.ListPrice" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.Price" class="form-label"></label>
                <input class="form-control" disabled id="Price" asp-for="Product.Price" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.Price50" class="form-label"></label>
                <input class="form-control" disabled id="Price50" asp-for="Product.Price50" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.Price100" class="form-label"></label>
                <input class="form-control" disabled id="Price100" asp-for="Product.Price100" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.ImageUrl" class="form-label"></label>
                <input class="form-control" disabled id="ImageUrl" asp-for="Product.ImageUrl" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.CategoryID" class="form-label"></label>
                <select disabled asp-for="Product.CategoryID" asp-items="@Model.CategoryList" class="form-select border-0">
                    <option disabled>--Select Category--</option>
                    @*   <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>*@
                </select>
                
                <span asp-validation-for="Product.CategoryID" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger form-control"><i class="bi bi-pencil-fill"></i> Delete</button>
            </div>
        </form>
    </div>
