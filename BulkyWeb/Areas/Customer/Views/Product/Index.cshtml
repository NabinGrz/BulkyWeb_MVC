@model List<Product>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="AddProduct" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Product Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@obj.ID" class="btn btn-primary mx-1"><i class="bi bi-pencil-fill"></i>Edit</a>
                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@obj.ID" class="btn btn-danger mx-1"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>