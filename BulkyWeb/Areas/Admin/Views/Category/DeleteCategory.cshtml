@{
}
@model Category;

<div class="container border border-2 shadow-sm rounded-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <form method="post">
            <input asp-for="ID" hidden/>
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label"></label>
                <input class="form-control" disabled id="name" asp-for="CategoryName" />
            </div>
            <div class="mb-3">
                <label asp-for="CategoryOrder" class="form-label"></label>
                <input class="form-control" disabled id="displayName" asp-for="CategoryOrder" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger form-control"><i class="bi bi-pencil-fill"></i> Delete</button>
            </div>
        </form>
    </div>