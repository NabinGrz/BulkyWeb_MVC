@using BulkyWeb.Models.DomainModel;
@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="AddCategory" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Add New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(x => x.CategoryOrder))
            {
                <tr>
                    <td>@obj.CategoryName</td>
                    <td>@obj.CategoryOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.ID" class="btn btn-primary mx-1"><i class="bi bi-pencil-fill"></i>Edit</a>
                            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@obj.ID" class="btn btn-danger mx-1"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>